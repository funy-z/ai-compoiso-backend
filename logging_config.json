{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "app_handler": {
      "class": "logging.FileHandler",
      "filename": "app.log",
      "formatter": "standard",
      "level": "INFO"
    },
    "ai_docs_handler": {
      "class": "logging.FileHandler",
      "filename": "ai_docs.log",
      "formatter": "standard",
      "level": "INFO"
    },
    "uvicorn_handler": {
      "class": "logging.FileHandler",
      "filename": "uvicorn.log",
      "formatter": "standard",
      "level": "INFO"
    },
    "starlette_handler": {
      "class": "logging.FileHandler",
      "filename": "starlette.log",
      "formatter": "standard",
      "level": "INFO"
    },
    "httpx_handler": {
      "class": "logging.FileHandler",
      "filename": "httpx.log",
      "formatter": "standard",
      "level": "INFO"
    }
  },
  "loggers": {
    "": {
      "handlers": [
        "app_handler"
      ],
      "level": "INFO",
      "propagate": true
    },
    "ai_docs": {
      "handlers": [
        "ai_docs_handler"
      ],
      "level": "INFO",
      "propagate": false
    },
    "uvicorn": {
      "handlers": [
        "uvicorn_handler"
      ],
      "level": "INFO",
      "propagate": false
    },
    "uvicorn.error": {
      "handlers": [
        "uvicorn_handler"
      ],
      "level": "INFO",
      "propagate": false
    },
    "uvicorn.access": {
      "handlers": [
        "uvicorn_handler"
      ],
      "level": "INFO",
      "propagate": false
    },
    "starlette": {
      "handlers": [
        "starlette_handler"
      ],
      "level": "INFO",
      "propagate": false
    },
    "httpx": {
      "handlers": [
        "httpx_handler"
      ],
      "level": "INFO",
      "propagate": false
    },
    "ai_services": {
      "handlers": [
        "app_handler"
      ],
      "level": "INFO",
      "propagate": false
    },
    "ai_chat": {
      "handlers": [
        "app_handler"
      ],
      "level": "INFO",
      "propagate": false
    }
  }
}
